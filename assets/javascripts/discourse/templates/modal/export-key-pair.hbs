<DModalBody @title="encrypt.export.title">
  <div>
    <p>{{i18n "encrypt.export.instructions"}}</p>
    <pre class="exported-key-pair">{{exported}}</pre>
  </div>
</DModalBody>

<div class="modal-footer">
  <DButton
    @class={{if copied "btn btn-primary ok" "btn btn-primary"}}
    @icon="far-clipboard"
    @label={{if
      copied
      "encrypt.export.copied_to_clipboard"
      "encrypt.export.copy_to_clipboard"
    }}
    @disabled={{inProgress}}
    @action={{action "copy"}}
  />
  <DModalCancel @close={{action "closeModal"}} />
</div>